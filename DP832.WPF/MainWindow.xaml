<Window x:Class="DP832.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DP832 Power Supply Controller" Height="600" Width="900"
        MinHeight="400" MinWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1565C0" Padding="12,8">
            <TextBlock Text="DP832 Power Supply Controller"
                       Foreground="White" FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Main content area (placeholder) -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Connection panel -->
            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                <GroupBox Header="Connection" Padding="8">
                    <StackPanel>
                        <Label Content="Device Address:"/>
                        <TextBox x:Name="DeviceAddressBox"
                                 Text="GPIB0::1::INSTR"
                                 Margin="0,0,0,8"/>
                        <Button x:Name="ConnectButton"
                                Content="Connect"
                                Click="ConnectButton_Click"
                                Margin="0,0,0,4"/>
                        <Button x:Name="DisconnectButton"
                                Content="Disconnect"
                                Click="DisconnectButton_Click"
                                IsEnabled="False"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>

            <!-- Status area -->
            <GroupBox Grid.Column="1" Header="Status" Padding="8">
                <TextBlock x:Name="StatusText"
                           Text="Not connected. Enter a device address and click Connect."
                           TextWrapping="Wrap"
                           Foreground="Gray"/>
            </GroupBox>
        </Grid>

        <!-- Status bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusBarText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
