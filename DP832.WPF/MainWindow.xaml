<Window x:Class="DP832.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DP832 Power Supply Controller" Height="700" Width="1050"
        MinHeight="500" MinWidth="750">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1565C0" Padding="12,8">
            <TextBlock Text="DP832 Power Supply Controller"
                       Foreground="White" FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Main content area -->
        <Grid Grid.Row="1" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="210"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left panel: Connection + System Settings -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,6,0">
                <StackPanel>
                    <!-- Connection Group -->
                    <GroupBox Header="Connection" Padding="8" Margin="0,0,0,6">
                        <StackPanel>
                            <Label Content="Device Address:" Padding="0,0,0,2"/>
                            <TextBox x:Name="DeviceAddressBox" Text="GPIB0::1::INSTR" Margin="0,0,0,6"/>
                            <Button x:Name="ConnectButton" Content="Connect"
                                    Click="ConnectButton_Click" Margin="0,0,0,3"/>
                            <Button x:Name="DisconnectButton" Content="Disconnect"
                                    Click="DisconnectButton_Click" IsEnabled="False" Margin="0,0,0,3"/>
                            <Button x:Name="IdentifyButton" Content="Identify Device"
                                    Click="IdentifyButton_Click" IsEnabled="False"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- System Settings Group -->
                    <GroupBox Header="System Settings" Padding="8" Margin="0,0,0,6">
                        <StackPanel>
                            <!-- Brightness -->
                            <Label Content="Brightness (1–100):" Padding="0,0,0,2"/>
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="BrightnessBox" Text="50" Grid.Column="0" Margin="0,0,3,0"/>
                                <Button x:Name="SetBrightnessButton" Content="Set" Grid.Column="1"
                                        Click="SetBrightnessButton_Click" IsEnabled="False" Width="38"/>
                            </Grid>

                            <!-- Beeper -->
                            <Label Content="Beeper:" Padding="0,0,0,2"/>
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="BeeperOnButton" Content="On" Grid.Column="0"
                                        Click="BeeperOnButton_Click" IsEnabled="False" Margin="0,0,2,0"/>
                                <Button x:Name="BeeperOffButton" Content="Off" Grid.Column="1"
                                        Click="BeeperOffButton_Click" IsEnabled="False" Margin="2,0,0,0"/>
                            </Grid>

                            <!-- OTP -->
                            <Label Content="Over Temp. Protect:" Padding="0,0,0,2"/>
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="OtpOnButton" Content="On" Grid.Column="0"
                                        Click="OtpOnButton_Click" IsEnabled="False" Margin="0,0,2,0"/>
                                <Button x:Name="OtpOffButton" Content="Off" Grid.Column="1"
                                        Click="OtpOffButton_Click" IsEnabled="False" Margin="2,0,0,0"/>
                            </Grid>

                            <!-- Screen Saver -->
                            <Label Content="Screen Saver:" Padding="0,0,0,2"/>
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="ScreenSaverOnButton" Content="On" Grid.Column="0"
                                        Click="ScreenSaverOnButton_Click" IsEnabled="False" Margin="0,0,2,0"/>
                                <Button x:Name="ScreenSaverOffButton" Content="Off" Grid.Column="1"
                                        Click="ScreenSaverOffButton_Click" IsEnabled="False" Margin="2,0,0,0"/>
                            </Grid>

                            <!-- Tracking Mode -->
                            <Label Content="Track Mode:" Padding="0,0,0,2"/>
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="TrackModeSyncButton" Content="SYNC" Grid.Column="0"
                                        Click="TrackModeSyncButton_Click" IsEnabled="False" Margin="0,0,2,0"/>
                                <Button x:Name="TrackModeIndeButton" Content="INDE" Grid.Column="1"
                                        Click="TrackModeIndeButton_Click" IsEnabled="False" Margin="2,0,0,0"/>
                            </Grid>

                            <!-- Track CH1 -->
                            <Label Content="Track CH1:" Padding="0,0,0,2"/>
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="TrackCh1OnButton" Content="On" Grid.Column="0"
                                        Click="TrackCh1OnButton_Click" IsEnabled="False" Margin="0,0,2,0"/>
                                <Button x:Name="TrackCh1OffButton" Content="Off" Grid.Column="1"
                                        Click="TrackCh1OffButton_Click" IsEnabled="False" Margin="2,0,0,0"/>
                            </Grid>

                            <!-- Track CH2 -->
                            <Label Content="Track CH2:" Padding="0,0,0,2"/>
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="TrackCh2OnButton" Content="On" Grid.Column="0"
                                        Click="TrackCh2OnButton_Click" IsEnabled="False" Margin="0,0,2,0"/>
                                <Button x:Name="TrackCh2OffButton" Content="Off" Grid.Column="1"
                                        Click="TrackCh2OffButton_Click" IsEnabled="False" Margin="2,0,0,0"/>
                            </Grid>

                            <!-- Reset -->
                            <Button x:Name="ResetButton" Content="Reset to Defaults"
                                    Click="ResetButton_Click" IsEnabled="False"
                                    Background="#FFCCCC" Foreground="DarkRed"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Right panel: Tab control -->
            <TabControl Grid.Column="1">

                <!-- Status Tab -->
                <TabItem Header="Status">
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Button Grid.Row="0" x:Name="RefreshStatusButton" Content="Refresh Status"
                                Click="RefreshStatusButton_Click" IsEnabled="False"
                                HorizontalAlignment="Left" Margin="0,0,0,6" Padding="12,4"/>
                        <TextBox Grid.Row="1" x:Name="StatusText"
                                 IsReadOnly="True"
                                 FontFamily="Consolas" FontSize="12"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 TextWrapping="NoWrap"
                                 Text="Not connected. Enter a device address and click Connect."
                                 AcceptsReturn="True"/>
                    </Grid>
                </TabItem>

                <!-- Channel Control Tab -->
                <TabItem Header="Channel Control">
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Channel selector -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6">
                            <Label Content="Channel:" VerticalAlignment="Center" Padding="0,0,6,0"/>
                            <ComboBox x:Name="ChannelComboBox" SelectedIndex="0" Width="80" VerticalAlignment="Center">
                                <ComboBoxItem Content="CH1"/>
                                <ComboBoxItem Content="CH2"/>
                                <ComboBoxItem Content="CH3"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Channel controls -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel>

                                <!-- Voltage -->
                                <GroupBox Header="Voltage" Padding="8" Margin="0,0,0,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="VoltageBox" Text="0.000"
                                                 Grid.Column="0" Margin="0,0,4,0"
                                                 ToolTip="CH1/CH2: 0–30 V  |  CH3: 0–5 V"/>
                                        <Button x:Name="SetVoltageButton" Content="Set (V)"
                                                Grid.Column="1" Click="SetVoltageButton_Click"
                                                IsEnabled="False" Width="65"/>
                                    </Grid>
                                </GroupBox>

                                <!-- Current -->
                                <GroupBox Header="Current Limit" Padding="8" Margin="0,0,0,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="CurrentBox" Text="0.000"
                                                 Grid.Column="0" Margin="0,0,4,0"
                                                 ToolTip="All channels: 0–3 A"/>
                                        <Button x:Name="SetCurrentButton" Content="Set (A)"
                                                Grid.Column="1" Click="SetCurrentButton_Click"
                                                IsEnabled="False" Width="65"/>
                                    </Grid>
                                </GroupBox>

                                <!-- OVP -->
                                <GroupBox Header="Over Voltage Protection (OVP)" Padding="8" Margin="0,0,0,6">
                                    <StackPanel>
                                        <Grid Margin="0,0,0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="OvpLevelBox" Text="0.010"
                                                     Grid.Column="0" Margin="0,0,4,0"
                                                     ToolTip="CH1/CH2: 0.01–31 V  |  CH3: 0.01–6 V"/>
                                            <Button x:Name="SetOvpLevelButton" Content="Set Level"
                                                    Grid.Column="1" Click="SetOvpLevelButton_Click"
                                                    IsEnabled="False" Width="75"/>
                                        </Grid>
                                        <StackPanel Orientation="Horizontal">
                                            <Button x:Name="OvpOnButton" Content="Enable OVP"
                                                    Click="OvpOnButton_Click" IsEnabled="False" Margin="0,0,4,0" Padding="10,2"/>
                                            <Button x:Name="OvpOffButton" Content="Disable OVP"
                                                    Click="OvpOffButton_Click" IsEnabled="False" Padding="10,2"/>
                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>

                                <!-- OCP -->
                                <GroupBox Header="Over Current Protection (OCP)" Padding="8" Margin="0,0,0,6">
                                    <StackPanel>
                                        <Grid Margin="0,0,0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="OcpLevelBox" Text="0.001"
                                                     Grid.Column="0" Margin="0,0,4,0"
                                                     ToolTip="All channels: 0.001–4 A"/>
                                            <Button x:Name="SetOcpLevelButton" Content="Set Level"
                                                    Grid.Column="1" Click="SetOcpLevelButton_Click"
                                                    IsEnabled="False" Width="75"/>
                                        </Grid>
                                        <StackPanel Orientation="Horizontal">
                                            <Button x:Name="OcpOnButton" Content="Enable OCP"
                                                    Click="OcpOnButton_Click" IsEnabled="False" Margin="0,0,4,0" Padding="10,2"/>
                                            <Button x:Name="OcpOffButton" Content="Disable OCP"
                                                    Click="OcpOffButton_Click" IsEnabled="False" Padding="10,2"/>
                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>

                                <!-- Output & Trip -->
                                <GroupBox Header="Output" Padding="8" Margin="0,0,0,6">
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="OutputOnButton" Content="Enable Output"
                                                Click="OutputOnButton_Click" IsEnabled="False"
                                                Margin="0,0,4,0" Padding="10,2"/>
                                        <Button x:Name="OutputOffButton" Content="Disable Output"
                                                Click="OutputOffButton_Click" IsEnabled="False"
                                                Margin="0,0,8,0" Padding="10,2"/>
                                        <Button x:Name="ClearTripButton" Content="Clear Trip"
                                                Click="ClearTripButton_Click" IsEnabled="False" Padding="10,2"/>
                                    </StackPanel>
                                </GroupBox>

                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </TabItem>

            </TabControl>
        </Grid>

        <!-- Status bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusBarText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
